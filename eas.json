{
  "cli": {
    "version": ">= 5.9.0"
  },
  "build": {
    "development": {
      "developmentClient": true,
      "distribution": "internal",
      "env": {
        "API_URL": "http://localhost:3001",
        "SOCKET_URL": "ws://localhost:3001"
      }
    },
    "preview": {
      "distribution": "internal",
      "env": {
        "API_URL": "https://staging-api.fadedskies.app",
        "SOCKET_URL": "wss://staging-api.fadedskies.app"
      },
      "ios": {
        "simulator": true
      }
    },
    "production": {
      "env": {
        "API_URL": "https://api.fadedskies.app",
        "SOCKET_URL": "wss://api.fadedskies.app"
      },
      "ios": {
        "buildConfiguration": "Release"
      },
      "android": {
        "buildType": "apk"
      }
    },
    "production-aab": {
      "extends": "production",
      "android": {
        "buildType": "aab"
      }
    }
  },
  "submit": {
    "production": {
      "ios": {
        "appleId": "your.apple.id@email.com",
        "ascAppId": "your_app_store_connect_app_id",
        "appleTeamId": "YOUR_APPLE_TEAM_ID"
      },
      "android": {
        "serviceAccountKeyPath": "./android-service-account.json",
        "track": "production"
      }
    },
    "preview": {
      "ios": {
        "appleId": "your.apple.id@email.com",
        "ascAppId": "your_app_store_connect_app_id",
        "appleTeamId": "YOUR_APPLE_TEAM_ID"
      },
      "android": {
        "serviceAccountKeyPath": "./android-service-account.json",
        "track": "beta"
      }
    }
  }
}
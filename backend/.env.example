# Database
DATABASE_URL="postgresql://username:password@localhost:5432/faded_skies_db"

# JWT Secret
JWT_SECRET="your-super-secret-jwt-key-here-make-it-long-and-random"

# Server Configuration
PORT=3001
NODE_ENV=development
ALLOWED_ORIGINS="http://localhost:3000,http://localhost:19006"

# Redis Configuration
REDIS_URL="redis://localhost:6379"

# Stripe Payment Processing
STRIPE_SECRET_KEY="sk_test_your_stripe_secret_key"
STRIPE_WEBHOOK_SECRET="whsec_your_stripe_webhook_secret"

# Twilio SMS Service
TWILIO_ACCOUNT_SID="your_twilio_account_sid"
TWILIO_AUTH_TOKEN="your_twilio_auth_token"
TWILIO_PHONE_NUMBER="+1234567890"

# Cloudinary Image Storage
CLOUDINARY_CLOUD_NAME="your_cloudinary_cloud_name"
CLOUDINARY_API_KEY="your_cloudinary_api_key"
CLOUDINARY_API_SECRET="your_cloudinary_api_secret"

# Google Maps API
GOOGLE_MAPS_API_KEY="your_google_maps_api_key"

# Email Service (Optional - for notifications)
SMTP_HOST="smtp.gmail.com"
SMTP_PORT=587
SMTP_USER="your_email@gmail.com"
SMTP_PASS="your_app_password"

# Mobile App Configuration
EXPO_ACCESS_TOKEN="your_expo_access_token"

# Background Jobs
BULL_DASHBOARD_USERNAME="admin"
BULL_DASHBOARD_PASSWORD="secure_password"

# API Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# File Upload Limits
MAX_FILE_SIZE=10485760
ALLOWED_FILE_TYPES="image/jpeg,image/png,image/webp"

# Cannabis Compliance
AGE_VERIFICATION_REQUIRED=true
MIN_AGE=21
DELIVERY_ZONES="Austin,Cedar Park,Round Rock,Pflugerville"

# Business Hours
BUSINESS_HOURS_START="09:00"
BUSINESS_HOURS_END="22:00"
DELIVERY_FEE_BASE=5.99
DELIVERY_FEE_PER_MILE=0.50
FREE_DELIVERY_THRESHOLD=100.00
TAX_RATE=0.0825

# Driver Payments
DRIVER_BASE_PAY=6.00
DRIVER_MILEAGE_RATE=0.50
INSTANT_PAYOUT_FEE=0.50

# Monitoring & Logging
LOG_LEVEL=info
SENTRY_DSN="your_sentry_dsn_for_error_tracking"

# Security
BCRYPT_ROUNDS=12
SESSION_TIMEOUT=86400000

# Mobile App Deep Links
IOS_BUNDLE_ID="com.fadedskies.delivery"
ANDROID_PACKAGE_NAME="com.fadedskies.delivery"
UNIVERSAL_LINK_DOMAIN="fadedskies.app"
